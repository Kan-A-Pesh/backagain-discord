{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",
    "plugins": [
      {
        "name": "typescript-transform-paths"
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
